<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <include
        android:id="@+id/appbar"
        layout="@layout/appbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="1200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        app:layout_constraintVertical_bias="0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="400dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/Constraint1"
                        android:layout_width="380dp"
                        android:layout_height="400dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0">

                        <ImageView
                            android:id="@+id/HS_Image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/nopath___copy__79_"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.95"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.05" />

                        <TextView
                            android:id="@+id/Text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="المؤتمر الدولي للثقافة\n والفنون"
                            android:textColor="#3F4339"
                            android:textSize="17dp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/HS_Image"
                            app:layout_constraintHorizontal_bias="0.95"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.04" />

                        <ImageView
                            android:id="@+id/location_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/group_1297"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/HS_Image"
                            app:layout_constraintHorizontal_bias="0.95"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/Text1"
                            app:layout_constraintVertical_bias="0.04" />

                        <TextView
                            android:id="@+id/location_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="السعودية - جدة"
                            android:textColor="#888888"
                            android:textSize="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/location_icon"
                            app:layout_constraintHorizontal_bias="0.95"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/Text1"
                            app:layout_constraintVertical_bias="0.04" />

                        <Button
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:background="@drawable/rounded_corners"
                            android:backgroundTint="#CD4A58"
                            android:text="مجانية"
                            android:textColor="#FFFFFF"
                            android:textSize="14dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/HS_Image"
                            app:layout_constraintHorizontal_bias="0.95"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/location_text"
                            app:layout_constraintVertical_bias="0.04" />

                        <TextView
                            android:id="@+id/long_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="هذا النص يتم تركيبه على أي تصميم دون\n مشكلة فلن يبدو وكأنه نصاً بديلاً"
                            android:textColor="#3F4339"
                            android:textSize="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.95"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/HS_Image"
                            app:layout_constraintVertical_bias="0.05" />

                        <ImageView
                            android:id="@+id/calender_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/component_34__1"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.95"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/long_text"
                            app:layout_constraintVertical_bias="0.05" />
                        <TextView
                        android:id="@+id/mn_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="من"
                        android:textColor="#888888"
                        android:textSize="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/calender_icon"
                        app:layout_constraintTop_toBottomOf="@+id/long_text"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.98"
                        app:layout_constraintVertical_bias="0.05"
                        />
                        <TextView
                            android:id="@+id/mn_calender_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30 Dec,2018"
                            android:textColor="#888888"
                            android:textSize="16dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/mn_text"
                            app:layout_constraintTop_toBottomOf="@+id/long_text"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_bias="0.98"
                            app:layout_constraintVertical_bias="0.05"
                            />
                        <View
                            android:id="@+id/vertical_line"
                            android:layout_width="0.1dp"
                            android:layout_height="23dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/mn_calender_text"
                            app:layout_constraintTop_toBottomOf="@id/long_text"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintVertical_bias="0.05"
                            app:layout_constraintHorizontal_bias="0.9"
                            android:outlineAmbientShadowColor="#000000"
                            />
                        <ImageView
                            android:id="@+id/calender_icon_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/component_34__1"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/vertical_line"
                            app:layout_constraintHorizontal_bias="0.9"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/long_text"
                            app:layout_constraintVertical_bias="0.05" />
                        <TextView
                            android:id="@+id/ela_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="إلى"
                            android:textColor="#888888"
                            android:textSize="16dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/calender_icon_2"
                            app:layout_constraintTop_toBottomOf="@+id/long_text"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_bias="0.98"
                            app:layout_constraintVertical_bias="0.05"
                            />
                        <TextView
                            android:id="@+id/ela_calender_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 Jan,2019"
                            android:textColor="#888888"
                            android:textSize="16dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/ela_text"
                            app:layout_constraintTop_toBottomOf="@+id/long_text"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_bias="0.98"
                            app:layout_constraintVertical_bias="0.05"
                            />
                        <ImageView
                            android:id="@+id/person_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/_icon_olor"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/calender_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintVertical_bias="0.05"
                            app:layout_constraintHorizontal_bias="0.95"
                            />
                        <TextView
                            android:id="@+id/person_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="اللجنة الدولية للصليب الأحمر"
                            android:textColor="#888888"
                            android:textSize="16dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/person_icon"
                            app:layout_constraintTop_toBottomOf="@id/vertical_line"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintVertical_bias="0.05"
                            app:layout_constraintHorizontal_bias="0.95"
                            />
                        <View
                            android:id="@+id/horizontal_line"
                            android:layout_width="310dp"
                            android:layout_height="0.1dp"
                            android:outlineAmbientShadowColor="#888888"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/person_text"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintVertical_bias="0.1"
                            app:layout_constraintHorizontal_bias="0.95"
                            />
                        <ImageView
                            android:id="@+id/fav_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/heart"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/horizontal_line"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintVertical_bias="0.1"
                            app:layout_constraintHorizontal_bias="0.88"
                            android:background="@drawable/ellipse_1100"
                            />
                        <TextView
                            android:id="@+id/fav_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="أضف إلى المفضلة"
                            android:textColor="#888888"
                            android:textSize="14dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/fav_icon"
                            app:layout_constraintTop_toBottomOf="@id/horizontal_line"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintVertical_bias="0.1"
                            app:layout_constraintHorizontal_bias="0.95"
                            />
                        <View
                            android:id="@+id/vertical_line2"
                            android:layout_width="0.1dp"
                            android:layout_height="23dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/fav_text"
                            app:layout_constraintTop_toBottomOf="@id/horizontal_line"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintVertical_bias="0.1"
                            app:layout_constraintHorizontal_bias="0.9"
                            android:outlineAmbientShadowColor="#000000"
                            />
                        <ImageView
                            android:id="@+id/share_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/share"
                            android:background="@drawable/ellipse_1101"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/vertical_line2"
                            app:layout_constraintTop_toBottomOf="@id/horizontal_line"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintVertical_bias="0.1"
                            app:layout_constraintHorizontal_bias="0.85"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="اشتراك"
                            android:textSize="14dp"
                            android:textColor="#888888"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/share_icon"
                            app:layout_constraintTop_toBottomOf="@+id/horizontal_line"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintVertical_bias="0.1"
                            app:layout_constraintHorizontal_bias="0.95"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </HorizontalScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>