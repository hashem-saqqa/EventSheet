            app:layout_constraintVertical_bias="0.05" />

        <TextView
            android:id="@+id/Text1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="المؤتمر الدولي للثقافة\n والفنون"
