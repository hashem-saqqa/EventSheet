            app:layout_constraintVertical_bias="0.04" />

        <ImageView
            android:id="@+id/location_icon_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/group_1297"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/HS_Image_3"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Text1_3"
            app:layout_constraintVertical_bias="0.04" />

        <TextView
            android:id="@+id/location_text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="السعودية - جدة"
            android:textColor="#888888"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/location_icon_3"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Text1_3"
            app:layout_constraintVertical_bias="0.04" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#CD4A58"
            android:gravity="center_horizontal"
            android:text="مجانية"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
